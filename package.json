{
  "name": "quoll",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"yarn api\" \"yarn client-web\"",
    "api": "node scripts/start-api.js",
    "client-web": "node scripts/start-client-web.js",
    "ui-components": "node scripts/start-ui-components.js",
    "release": "cross-env HUSKY_BYPASS=true lerna publish --conventional-commits --yes",
    "deploy": "concurrently \"yarn deploy:api\" \"yarn deploy:client\"",
    "clean": "concurrently \"yarn clean-build\" \"yarn clean-node-modules\"",
    "clean-build": "lerna exec -- rm -rf ./build ./dist && rm -rf ./build ./dist",
    "clean-node-modules": "lerna exec -- rm -rf ./node_modules && rm -rf ./node_modules",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "husky": "^8.0.0",
    "lerna": "^8.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1"
  }
}
